// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Thread {
  id          String   @id
  name        String
  displayMode String // "monologue" or "scrap"
  createdAt   DateTime @default(now())
  removed     Boolean
  removedAt   DateTime
  Note        Note[]
}

model DeletedThread {
  id        String   @id
  deletedAt DateTime
}

model Note {
  id        String   @id // バイト配列にしたいよね -> まあ文字列でもええか！
  content   String
  editor    Device   @relation(fields: [editorId], references: [id])
  editorId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  thread    Thread   @relation(fields: [threadId], references: [id])
  threadId  String
  parent    Note?    @relation("Tree", fields: [parentId], references: [id])
  parentId  String?
  notes     Note[]   @relation("Tree")
  removed   Boolean
  removedAt DateTime
}

model DeletedNote {
  id        String   @id
  deletedAt DateTime
}

model Device {
  id       String   @id
  name     String
  me       Boolean
  syncedAt DateTime
  Note     Note[]
}
