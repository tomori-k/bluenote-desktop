// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Device {
  id        String      @id
  name      String
  me        Boolean
  Note      Note[]
  SyncState SyncState[]
}

model Note {
  id        String @id // バイト配列にしたいよね -> まあ文字列でもええか！
  content   String
  editor    Device @relation(fields: [editorId], references: [id])
  editorId  String
  createdAt BigInt
  updatedAt BigInt
}

model SyncState {
  device   Device @relation(fields: [deviceId], references: [id])
  deviceId String @id
  syncedAt BigInt
}
